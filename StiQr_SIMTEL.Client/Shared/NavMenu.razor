@using StiQr_SIMTEL.Client.Models;
@inject NavigationManager NavManager;
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="img/logo.png" alt="AppIcon" style="height: 1.5em" />  StiQr SIMTEL
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/LabelPage">
                <span class="oi oi-grid-three-up" aria-hidden="true"></span> Gestión EtiquetasQR
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/LabelQrRecharge">
                <span class="oi oi-document" aria-hidden="true"></span> Recargar
            </NavLink>
        </div>
        <hr class="dropdown-divider">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="#" @onclick="SignOut">
                <span class="oi oi-account-logout" aria-hidden="true"></span> Cerrar Sesión
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void SignOut()
    {
        SecureStorage.RemoveAll();
        Setting.UserBasicDetail = null;
        NavManager.NavigateTo("/LoginPage");
    }
}
